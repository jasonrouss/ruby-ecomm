<div>
<h1 >Products in Category: <%= @category %></h1>

<div class="grid grid-cols-3 gap-4 mt-8">
  <% @products.each do |product| %>
    <div class="bg-white p-4 rounded shadow">
      <div class="mb-4">
        <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
      </div>
      <h2 class="text-xl font-bold mb-2"><%= product.name %></h2>
      <p class="text-gray-600 mb-2"><%= product.description %></p>
      <p class="text-gray-800 font-bold mb-2">$<%= product.price %></p>
      <p class="text-gray-600 mb-2">Condition: <%= product.condition %></p>
      <p class="text-gray-600 mb-2">Size: <%= product.size %></p>
      <p class="text-gray-600 mb-2">Color: <%= product.color %></p>
      <p class="text-gray-600 mb-2">Category: <%= link_to product.category, products_by_category_path(category: product.category) %></p>
      <div class="flex justify-end">
        <%= link_to 'Show', product, class: 'text-blue-500 underline mr-2' %>
        <%= link_to 'Edit', edit_product_path(product), class: 'text-blue-500 underline mr-2' %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 underline' %>
      </div>
    </div>
<% end %>

</div>